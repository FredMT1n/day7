extends ../layout

block content
  h4
    a(href="/customers/create") Create New
  h1=title
  form(action="/customers/search")
    label(for="keyword") keyword
    input(type="text" name="keyword")
    input(type="submit" value="Search")
  table
    thead
      tr
        th Id
        th Fullname
        th Email
        th Image
        th Actions
    tbody
      if customers.length > 0
        each cust in customers
          tr
            td=cust._id
            td=cust.fullname
            td=cust.email
            td=cust.image
            td
              a(href=`/customers/update/${cust._id}`) Update |
              a(href=`/customers/delete/${cust._id}`) Delete
      else
        tr
          td(colspan="5") No Data
